<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane fx:id="MainPane" minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.TabAdjustTeamsController">
  <columnConstraints>
    <ColumnConstraints hgrow="SOMETIMES" maxWidth="15.0" minWidth="0.0" prefWidth="15.0" />
    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
    <ColumnConstraints hgrow="SOMETIMES" maxWidth="15.0" minWidth="15.0" prefWidth="15.0" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints maxHeight="55.0" minHeight="55.0" prefHeight="55.0" vgrow="SOMETIMES" />
    <RowConstraints minHeight="200.0" vgrow="SOMETIMES" />
    <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="30.0" vgrow="NEVER" />
      <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="15.0" vgrow="SOMETIMES" />
  </rowConstraints>
   <children>
      <ButtonBar GridPane.columnIndex="1">
        <buttons>
          <Button fx:id="BtnGenerateTeams" onAction="#onGenerateTeams" text="Teams generieren" ButtonBar.buttonData="RIGHT" />
        </buttons>
      </ButtonBar>
      <GridPane GridPane.columnIndex="1" GridPane.rowIndex="1">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="100.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="100.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="100.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <TitledPane animated="false" collapsible="false" text="Teams">
               <content>
                  <ListView fx:id="ListTeams" onMouseClicked="#OnMouseClickedinListTeam" />
               </content>
            </TitledPane>
            <TitledPane animated="false" collapsible="false" text="Ausgewähltes Team" GridPane.rowIndex="2">
               <content>
                  <ListView fx:id="ListSelectedTeams" onDragDetected="#OnDragDetectedSelected" onDragDone="#OnDragDoneSelected" onDragDropped="#OnDragDroppedSelected" onDragEntered="#OnDragEnteredSelected" onDragExited="#OnDragExitedSelected" onDragOver="#OnDragOverSelected" onMouseDragEntered="#OnMouseDragEnteredSelected" onMouseDragExited="#OnMouseDragExitedSelected" />
               </content>
            </TitledPane>
            <TitledPane animated="false" collapsible="false" text="Freie Teilnehmer" GridPane.rowIndex="4">
               <content>
                  <ListView fx:id="ListFreeParticipants" onDragDetected="#OnDragDetectedTeam" onDragDone="#OnDragDoneTeam" onDragDropped="#OnDragDroppedTeam" onDragEntered="#OnDragEnteredTeam" onDragExited="#OnDragExitedTeam" onDragOver="#OnDragOverTeam" onMouseDragEntered="#OnMouseDragEnteredTeam" onMouseDragExited="#OnMouseDragExitedTeam" />
               </content>
            </TitledPane>
            <ButtonBar prefHeight="40.0" prefWidth="200.0" GridPane.rowIndex="3" />
            <GridPane GridPane.rowIndex="3">
              <columnConstraints>
                <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="NEVER" />
                  <ColumnConstraints hgrow="NEVER" />
                  <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="-Infinity" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Button fx:id="BtnAddToTeam" mnemonicParsing="false" onAction="#OnBtnAddToTeam" prefWidth="60.0" text="↥" GridPane.columnIndex="1">
                     <GridPane.margin>
                        <Insets right="7.0" />
                     </GridPane.margin>
                  </Button>
                  <Button fx:id="BtnRemoveFromTeam" mnemonicParsing="false" onAction="#OnBtnRemoveFromTeam" prefWidth="60.0" text="↧" GridPane.columnIndex="2">
                     <GridPane.margin>
                        <Insets left="7.0" />
                     </GridPane.margin>
                  </Button>
               </children>
            </GridPane>
         </children>
      </GridPane>
      <ButtonBar prefHeight="40.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
        <buttons>
            <Button fx:id="BtnNewTeam" mnemonicParsing="false" onAction="#onNewTeam" text="Neues Team" />
        </buttons>
      </ButtonBar>
   </children>
</GridPane>
